5. İstifadəçidən daxil edilən ədədin rəqəmləri cəmini hesablayın.
#include <iostream>
using namespace std;

int main() {
    int n, cem = 0;
    cout << "Ədəd daxil edin: ";
    cin >> n;

    while (n != 0) {
        cem += n % 10;
        n /= 10;
    }

    cout << "Rəqəmlərin cəmi: " << cem;
    return 0;
}
